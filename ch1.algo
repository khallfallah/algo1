def compteMots(ph):
    "fonction qui compte le nombre de mots dans la phrase ph"
    nbMots = 1
    i = 0
    while i < len(ph):
        if ph[i] == " " and ph != "":
            nbMots = nbMots + 1
        elif ph == "":
            nbMots = 0
        i = i + 1
    return nbMots
